<dryIoc:PrismApplication x:Class="Mutey.App"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:tb="http://www.hardcodet.net/taskbar"
                         xmlns:dryIoc="http://prismlibrary.com/"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         mc:Ignorable="d"
                         xmlns:vm="clr-namespace:Mutey.ViewModels"
                         ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="TaskbarIcon"
                        d:DataContext="{d:DesignInstance vm:AppViewModel}" 
                        IconSource="Icons/microphone-blue.ico"
                        DoubleClickCommand="{Binding OpenCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Command="{Binding OpenCommand}" />
                    <Separator/>
                    <MenuItem Header="Quit" Command="{Binding QuitCommand}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</dryIoc:PrismApplication>