<dryIoc:PrismApplication x:Class="Mutey.App"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:tb="http://www.hardcodet.net/taskbar"
                         xmlns:dryIoc="http://prismlibrary.com/"
                         xmlns:vm="clr-namespace:Mutey.ViewModels"
                         ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="TaskbarIcon"
                        d:DataContext="{d:DesignInstance vm:AppViewModel}"
                        IconSource="{Binding IconImage}" />
    </Application.Resources>
</dryIoc:PrismApplication>